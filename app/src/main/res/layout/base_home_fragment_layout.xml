<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/logo"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="SOB"
            android:layout_height="wrap_content"/>


        <ImageView

            android:layout_marginRight="10dp"
            android:id="@+id/scan_icon"
            android:layout_alignParentRight="true"
            android:src="@mipmap/scan_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/home_search_input_box"
            android:textSize="14sp"
            android:focusable="false"
            android:hint="@string/text_search_hint"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/shape_edit_box_bg"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/logo"
            android:layout_width="match_parent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/scan_icon"
            android:layout_height="30dp"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/base_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>